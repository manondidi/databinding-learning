<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="gameInfo"
            type="com.czq.mvvm.viewModel.GameInfoVm" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_deserve_percent"
        android:tag="layout/sub_layout_deserve_percent_0">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tvPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@{gameInfo.deservePercent}"
                android:textColor="#000000"
                android:textSize="26dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tvPercent"
                android:layout_toRightOf="@id/tvPercent"
                android:text="%"
                android:textColor="#000000"
                android:textStyle="italic" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:text="值得玩"
            android:textColor="#000000"
            android:textSize="9dp"
            android:textStyle="italic" />
    </RelativeLayout>
</layout>
